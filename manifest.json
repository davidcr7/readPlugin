{
  "manifest_version": 3,
  "name": "微信读书自动阅读器",
  "version": "1.0.0",
  "description": "自动阅读微信读书PC web端，支持定时翻页功能",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://weread.qq.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://weread.qq.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "微信读书自动阅读器"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}